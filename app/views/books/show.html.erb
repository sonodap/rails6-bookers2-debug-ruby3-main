<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
     <table class='table'>
       <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image(100, 100) %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>

　　　 　<!--いいね数とコメント件数-->
          <% if @book.favorited_by?(current_user) %>
            <td>
              <%= link_to book_favorites_path(@book), method: :delete do %>
               ♥<%= @book.favorites.count %>
              <% end %>
            </td>
            <% else %>
            <td>
              <%= link_to book_favorites_path(@book), method: :post do %>
               ♡<%= @book.favorites.count %>
              <% end %>
            </td>
          <% end %>
          <td>コメント数:<%= @book.book_comments.count %></td>
       </tr>

       <!--コメントを投稿した人のnameとプロフィール写真とコメント内容、Destroy機能-->

       <% @book.book_comments.each do |comment| %>
        <tr>
         <td>
            <%= image_tag comment.user.get_profile_image(100, 100) %><br>
            <%= comment.user.name %>
         </td>
         <td>
           <%= comment.comment %>
         </td>
         <td>
           <% if comment.user == current_user %>
            <%= link_to"Destroy", book_book_comment_path(comment.book,comment), class:"btn btn-sm btn-danger", method: :delete %>
           <% end %>
         </td>
        </tr>
       <% end %>
     </table>
      <!--コメントの送信-->
        <div>
          <%= form_with model: [@book, @book_comment] do |f| %>
             <%= f.text_area :comment,class: "form-control", rows: '5' %>
             <%= f.submit "送信" %>
          <% end %>
       </div>
    </div>
  </div>
</div>